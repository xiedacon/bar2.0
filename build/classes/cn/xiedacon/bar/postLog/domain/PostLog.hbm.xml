<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping>
	<class name="cn.xiedacon.bar.postLog.domain.PostLog" table="postlog">
		<id name="id">
			<generator class="uuid"></generator>
		</id>
		<property name="firstOperation"></property>
		<property name="firstTime"></property>
		<property name="lastOperation"></property>
		<property name="lastTime"></property>
		
		<!-- 贴子记录与帖子之间多对一关系（基于外键） -->
		<many-to-one name="post" class="cn.xiedacon.bar.post.domain.Post" column="pid" lazy="false" cascade="save-update"></many-to-one>
		
		<!-- 帖子记录与首次操作人之间多对一关系 -->
		<many-to-one name="firstOperator" class="cn.xiedacon.bar.user.domain.User" column="firstOperator" lazy="false"></many-to-one>
		
		<!-- 帖子记录与最后操作人之间多对一关系 -->
		<many-to-one name="lastOperator" class="cn.xiedacon.bar.user.domain.User" column="lastOperator" lazy="false" cascade="save-update"></many-to-one>
		
		<!-- 帖子记录与帖子操作记录之间一对多关系
		<set name="postOperationLogs" lazy="false" cascade="all">
			<key column="postlogId"></key>
			<one-to-many class="cn.xiedacon.bar.postLog.domain.PostOperationLog"/>
		</set> -->
	</class>
</hibernate-mapping>